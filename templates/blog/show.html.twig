{% extends "base.html.twig" %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Consulter un article</h1>
    <div class="card text-white bg-info mb-3">
        <div class="card-header">
            Publiè le {{ article.updatedAt|date('d,m,Y') }} à {{ article.updatedAt|date('H:i') }} dans la catégorie {{ article.category.name }}
            {% for tag in article.tags %}
                <span class="badge rounded-pill bg-secondary">{{ tag.name }}</span>  
            {% endfor %}
        </div>
        <div class="card-body">
        <h4 class="card-title">{{ article.title }}</h4>
        <p class="card-text">{{ article.content }}</p>
        {% if app.user %}
            <a class="btn btn-warning" href="{{ path('blog_edit', {slug: article.slug}) }}">Modifier</a>
            <a class="btn btn-danger" href="{{ path('blog_delete', {slug: article.slug}) }}">Supprimer</a>
        {% endif %}
        </div>
    </div>
{% endblock %}
